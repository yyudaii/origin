<header data-bs-theme="dark">
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">仮タイトル</font></font></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="ナビゲーションを切り替え">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link" href="https://genius.com/">genius.comへ</a>
          </li>
        </ul>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container mt-4">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#postModal">
      <i class="fas fa-plus"></i> 新しい歌詞を投稿
    </button>
  </div>


  <!-- Marketing messaging and featurettes
  ================================================== -->

 <hr class="featurette-divider">
  <div class="container">
    <% @lyrics.each do |lyric| %>
      <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7">
          <h2 class="featurette-heading fw-normal lh-1"><%= lyric.title %></h2>
          <p class="lead"><%= simple_format(lyric.lyric) %></p>
        </div>
        <div class="col-md-5">
          <% if lyric.image && lyric.image.attached? %>
            <%= image_tag lyric.image, class: 'bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto', width: '500', height: '500' %>
          <% else %>
            <%= image_tag 'music_album_cover.png', class: 'bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto', width: '500', height: '500' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <hr class="featurette-divider">

  <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <% @lyrics.each_with_index do |lyric, index| %>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="<%= 'true' if index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
      <% end %>
    </div>
    <div class="carousel-inner">
      <% @lyrics.each_with_index do |lyric, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="container">
            <div class="carousel-caption text-start">
              <h1><%= lyric.title %></h1>
              <p class="opacity-75"><%= lyric.lyric %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">以前</font></font></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">次の</font></font></span>
    </button>
  </div>


    <!-- /END THE FEATURETTES にゃーーーー-->

  </div><!-- /.container -->


  <!-- FOOTER -->
  <footer class="container">
    <p class="float-end"><a href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">トップに戻る</font></font></a></p>
  </footer>
</main>

<!-- モーダルのHTML -->
<div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="postModalLabel">新しい歌詞を投稿</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: Lyric.new, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :title, 'タイトル' %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= form.label :lyric, '歌詞' %>
            <%= form.text_area :lyric, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= form.label :image, '画像' %>
            <%= form.file_field :image, class: 'form-control' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
            <%= form.submit '投稿', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    

